{% extends "layout.njk" %}

{% block title %}
  <title>Login</title>
{% endblock %}

{% block content %}
<div class="container text-center" >

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Login</h5>

    <form action="/login" method="post">
      <p>

      <div>
        <label>Name:</label>
        <input type="text" name="username"/><br/>
      </div>
      <div>
        <label>Password:</label>
        <input type="password" name="password"/>
      </div>
      <div>
        <button type="button" class="btn btn-success">
          Connexion
        </button>
      </div>
      </p>
    </form>

    <div>
          <h5 class="card-title">You don't have an account?</h5>

      <a href="/register"><button type="button" class="btn btn-success">
        Subscribe
      </button></a>
      </p>
    </div>

    <div>
      <a href="/auth/facebook">
        <button type="button" class="btn btn-primary">
          Facebook Connect
        </button>
      </a>
    </div>

  </div>
</div>
</div>

{% endblock %}
