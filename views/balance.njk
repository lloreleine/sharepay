{% extends "layout.njk" %}

{% block title %}
  <title>Pay Share - Balance</title>
{% endblock %}

{% block content %}
<div class="container">
  {# temporary #}
  <a href="/dashboard/">
    <button type="button" class="btn btn-dark">Dashboard</button>
  </a>
  <h2>Balance</h2>

  <div class="list-group">
    {% for element in board %}
    <div class="list-group-item list-group-item-action flex-column align-items-start active bg-white text-dark">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">{{activity.title}}</h5>
        <a href="/balance/{{activity.id}}"><button class="button"><i class="fas fa-search-plus"></i>&nbsp;View balance</button></a>
      </div>
      <div class="d-flex w-100 justify-content-between">
        <p> members: X, amount: Y â‚¬</p>
        {# to complete #}
        <a href="/reopen_activity/{{activity.id}}"><button class="button"><i class="fas fa-search-plus"></i>&nbsp;Re-open activity</button></a>
      </div>
      <div class="d-flex w-100 justify-content-between">
        <p class="mb-1"> {{activity.date}}, {{activity.location}} </p>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
