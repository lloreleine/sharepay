{% extends "layout.njk" %}

{% block title %}
  <title>Pay Share - View Activity</title>
{% endblock %}

{% block content %}
<div class="container">
  <a href="/dashboard/{{userid}}"><button type="button" class="btn btn-dark">Dashboard</button></a>
  <button type="button" class="btn btn btn-dark" data-toggle="modal" data-target="#finalizeActivity">
    Finalize the activity
  </button>

  {# <h3>Activity ID: {{activity.id}}</h3> #}

  <h3>Activity: {{activity.title}}</h3>
  <form action="/updateact/{{activity.id}}" method="POST">
    <input type="text" placeholder="New Title" name="new_title"/> &nbsp;&nbsp;
    <button type="submit">Update the title</button>

    <h3>Current location: {{activity.location}}</h3>
    <input type="text" placeholder="New Location" name="new_location"/> &nbsp;&nbsp;
    <button type="submit">Update the location</button>

    <h3>Current date: {{activity.date}}</h3>
    <input type="date" placeholder="New Date" name="new_date"/> &nbsp;&nbsp;
    <button type="submit">Update the date</button>

  </form>

  <h3>Users involved:</h3>
  <ul>
    {%for element in participants %}
    <li>{{element.name}}</li>
    {% endfor %}
  </ul>
  <form action="/updateparticipants/{{activity.id}}" method="POST">
    <fieldset>
      <legend>Who is involved?</legend>
      {% for element in users %}
      <div>
        <input type="checkbox" name="benefits" value="{{element.id}}">
        <label for="{{element.name}}">{{element.name}}</label>
      </div>
      {% endfor %}
    </fieldset>
    <button type="submit">Update the users involved</button>
  </form>

  <!-- Pop up finalize activity -->
  <div class="modal fade" id="finalizeActivity" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Finalize activity</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to finalize this activity ?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
          <a href="/finalize_activity/{{activityId}}">
            <button type="button" class="btn btn-success" id="finalize-activity-button">Yes</button>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center">

  </div>

  <h3>Expenses</h3>

  <div class="list-group">
    {% for element in expenses %}
    <div class="list-group-item list-group-item-action flex-column align-items-start active bg-white text-dark">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">{{element.title}} by <em>{{element.name}}</em></h5>
        <a href="/"><button class="floatright"><i class="fas fa-search-plus"></i>&nbsp;View Expense</button></a>
      </div>
      <p class="mb-1">for: {{element.count}}, amount: {{element.amount}} â‚¬</p>
    </div>
    {% endfor %}
  </div>

{% endblock %}
