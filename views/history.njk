{% extends "layout.njk" %}

{% block title %}
  <title>Pay Share - History</title>
{% endblock %}

{% block content %}
<div class="container">
  <a href="/dashboard/{{id}}">
    <button type="button" class="btn btn-dark">Dashboard</button>
  </a>
  <h2>Past Activities</h2>

  <div class="list-group">
    {% for activity in activities %}
    <div class="list-group-item list-group-item-action flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">{{activity.title}}</h5>
        <a href="/balance/{{activity.id}}"><button class="btn btn-dark"><i class="fas fa-search-plus"></i>&nbsp;View balance</button></a>
      </div>
      <div class="d-flex w-100 justify-content-between">
        <p> {{activity.nbmembers}} members</br> {{activity.totalamount}} â‚¬</p>
          <a href="/reopen_activity/{{activity.id}}"><button class="btn btn-dark mt-1"><i class="fas fa-search-plus"></i>&nbsp;Re-open activity</button></a>
      </div>
      <div class="d-flex w-100 justify-content-between">
        <small class="text-muted">{{date[loop.index0]}}</br>{{activity.location}}</small>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
