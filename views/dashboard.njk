{% extends "layout.njk" %}

{% block title %}
  <title>Current activities</title>
{% endblock %}

{% block headbuttons %}
<div class="container">
  <button type="button" class="btn btn-dark">Add an activity</button>
  <button type="button" class="btn btn-dark">History</button>
</div>
{% endblock %}

{% block content %}
<div class="container">
  <h2>Current Activities</h2>
  <div class="list-group">
    {% for activity in activities %}
    <a href="#" class="list-group-item list-group-item-action flex-column">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">{{activity.title}}</h5>
        <small>{{activity.date}}</small>
      </div>
      <p class="mb-1">Donec id elit non mi porta gravida at eget metus. Maecenas sed diam eget risus varius blandit.</p>
      <small>Donec id elit non mi porta.</small>
    </a>
    {% endfor %}
  </div>
</div>
{% endblock %}
